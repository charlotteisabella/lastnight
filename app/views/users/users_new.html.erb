<%= form_for @user do |f| %>
  <p>
  <%= f.label(:name, "Name") %>
  <%= f.text_field(:name) %>
  </p>

  <p>
  <%= f.label(:age, "Age") %>
  <%= f.text_field(:age) %>
  </p>

  <p>
  <%= f.label(:gender, "Gender") %>
  <%= f.text_field(:gender) %>
  </p>

  <p>
  <%= f.label(:email, "Email") %>
  <%= f.text_field(:email) %>
  </p>

  <p>
  <%= f.label(:password, "Password") %>
  <%= f.password_field(:password) %>
  </p>

  <p>
  <%= f.label(:password_confirmation, "Confirm Password") %>
  <%= f.password_field(:password_confirmation) %>
  </p>

  <%= f.submit ( "Submit"), :class => 'primary' %>
<% end %>
